{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext",
      "scripthost",
    ],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings/custom.d.ts",
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  }
}